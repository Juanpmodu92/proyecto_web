{{#> layout}}
<div class="container mt-5">
  <h1>Nuestros Servicios</h1>
  <div class="row">
    {{#each services}}
      <div class="col-md-4">
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.description}}</p>
      </div>
    </div>
  </div>
{{/each}}

  </div>
</div>
{{/layout}}
